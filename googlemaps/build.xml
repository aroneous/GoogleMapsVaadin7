<project name="GoogleMapsVaadin7" basedir="." default="ivyInstall"
    xmlns:ivy="antlib:org.apache.ivy.ant">

    <!-- Allow property overrides at a few levels -->
    <property environment="env"/>
    <property file="${user.home}/futrix.properties" />
    <property file="${basedir}/conf/${user.name}.properties" />
    <property file="${basedir}/conf/build.properties"/>
    <property name="project.version" value="1.3.4"/>

    <ivy:settings file="ivysettings.xml"/>

    <target name="ivyInstall">
        <ivy:install organisation="com.vaadin.tapio" module="googlemaps" revision="${project.version}"
            from="local-maven" to="shared"/>
    </target>
</project>
